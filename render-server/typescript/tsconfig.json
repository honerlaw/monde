{
  "compilerOptions": {
    "sourceRoot": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots": ["./types", "../node_modules/@types"]
  },
  "include": [
    "src/main.ts"
  ],
  "exclude": [
    "../node_modules/",
    "/dist/"
  ]
}